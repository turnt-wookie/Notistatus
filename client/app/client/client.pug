.container: .row: .col-md-12.text-right(style="margin-bottom:30px;")
  a.btn.btn-primary(ui-sref="client-new") Nuevo Cliente
.container: .row: .col-md-12
  table.table.table-bordered.table-hover
    thead
      tr
        th.text-center Cliente
        th.text-center Tel√©fono
        th.text-center Opciones
    tbody
      tr(ng-repeat="client in ctrl.clients")
        td {{client.name}}
        td {{client.phone}}
        td
          ul.list-inline
            li: a(ui-sref="client-edit({ id: client._id })"): span.glyphicon.glyphicon-pencil
            li: a(ui-sref="client-view({ id: client._id })"): span.glyphicon.glyphicon-eye-open
            li: a(ui-sref="send-message({ id: client._id })"): span.glyphicon.glyphicon-envelope
            li: a(ng-click="ctrl.delete(client)"): span.glyphicon.glyphicon-trash